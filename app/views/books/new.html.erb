<h2>New Book</h2>

<%= form_for(@book) do |f| %>
  <div class='field'>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>

  <div class='field'>
    <%= f.label :author %><br />
    <%= f.text_field :author %>
  </div>

  <div class='field'>
    <%= f.label :review %><br />
    <%= f.text_area :review %>
  </div>

  <div class='field'>
    <%= f.label :amazon_id %><br />
    <%= f.text_field :amazon_id %>
  </div>

  <%= f.submit %>
<% end %>
